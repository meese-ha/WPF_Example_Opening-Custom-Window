<Window x:Class="WPF_Example_Opening_Custom_Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Example_Opening_Custom_Window"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="btnNormal" Content="Normal" Width="120" Height="50" Margin="15"
                    Click="btnNormal_Click"/>
            <Button Name="btnModal" Content="Modal" Width="120" Height="50" Margin="15"
                    Click="btnModal_Click"/>
            <TextBox Name="txtinput" Width="200" Height="50" Margin="15" />
        </StackPanel>

    </Grid>
</Window>
